<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spinner_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinnner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:labelTextSize">30dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:popupBackground">#D5F6F6F6</item>
        <item name="android:popupElevation">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">#D3D3D3</item>
        <item name="android:radius">100sp</item>
    </style>
</resources>