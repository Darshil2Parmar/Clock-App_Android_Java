<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: Update blank fragment layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DigitalClock">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="22dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/dtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedc2"
            android:text="@string/title2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardHe"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="8dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="22dp"
        app:cardElevation="80px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextClock
            android:id="@+id/idTCClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimeL"
            android:background="@drawable/border"
            android:fontFamily="@font/regular"
            android:format24Hour="hh:mm:ss a"
            android:gravity="center_horizontal"
            android:hint="12:00:29 AM"
            android:text=""
            android:textFontWeight="500"
            android:textSize="40dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/roundedc3"
        android:hint="Date"
        android:layout_marginTop="30dp"
        android:id="@+id/Ddate"
        android:elevation="20dp"
        android:paddingHorizontal="8dp"
        android:layout_below="@id/card23"
        android:textSize="30dp"
        />


</RelativeLayout>
